@model DV.FrenteLoja.Core.Dominios.Entidades.GrupoProduto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h4>Grupo Produto - Detalhes</h4>
    <hr />

    @using (Html.BeginForm())
    {

        <div class="flex full-height">
            <div class="row col-md-12">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.IdGrupoProduto, new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.IdGrupoProduto, new { htmlAttributes = new { disabled = true } })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.IdGrupoSubGrupo, new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.IdGrupoSubGrupo, new { htmlAttributes = new { disabled = true } })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { disabled = true } })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.RegistroInativo, htmlAttributes: new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.RegistroInativo, new { @readonly = "true" })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.CampoCodigo, htmlAttributes: new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.CampoCodigo, new { htmlAttributes = new { disabled = true } })
                </div>

                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id })
                </div>
            </div>
        </div>
    }

    <hr />
    <div>
        @Html.ActionLink("Voltar pra lista", "Index")
    </div>

</body>
</html>
