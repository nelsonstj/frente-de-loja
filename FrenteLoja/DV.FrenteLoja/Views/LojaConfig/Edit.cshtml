@model DV.FrenteLoja.Core.Dominios.Entidades.LojaConfig

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h4>Loja Config - Editar</h4>
    <hr />

    @using (Html.BeginForm())
    {
        //@Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.idLoja)

        <div class="flex full-height">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row col-md-12">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.idLoja, new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.idLoja, new { htmlAttributes = new { disabled = true } })
                    @Html.ValidationMessageFor(model => model.idLoja, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.ConvenioPadrao, new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.ConvenioPadrao)
                    @Html.ValidationMessageFor(model => model.ConvenioPadrao, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.DescontoMax, htmlAttributes: new { @class = "orcamento-label" })
                    <br />
                    @Html.EditorFor(model => model.DescontoMax)
                    @Html.ValidationMessageFor(model => model.DescontoMax, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="botao btn-black" />
                </div>
            </div>
        </div>
    }

    <hr />
    <div>
        @Html.ActionLink("Voltar pra lista", "Index")
    </div>
</body>
</html>
