@model DV.FrenteLoja.Core.Contratos.DataObjects.OrcamentoDto


<div class="col-md-12 flex">
  <div class="col-md-6">
    <h3 style="margin-left: -15px;">PESQUISAR PRODUTOS</h3>
  </div>
  <div class="col-md-3">
    <label class="orcamento-label">Fabricante peça</label>
    </div>
  <div class="col-md-3">
    <label class="orcamento-label">Filtrar para veículo</label>
  </div>
  </div>
<div class="col-md-6">
 
    <div class="search" id="search">
        <button id="busca-produto" onclick="buscaProdutosSql()" title="PRODUTO"><i class="fa fa-search"></i></button>
        <input type="text" id="Descricao" name="Descricao" min="3" />
        <!--<button id="busca-produto" onclick="buscaProdutosElastic()" title="ELASTIC"><i class="fa fa-search"></i></button>-->
        <span id="clearSearch"><i class="fa fa-close"></i></span>
    </div>  
</div>
<div class="col-md-3">
 
  @Html.TextBoxFor(model => model.FabricantePeca)
</div>
<div class="col-md-3">
  
  <div class="toggle-switch-container">
    <input id="switchToggle" class="toggle-switch" type="checkbox" checked>
    <label for="switchToggle" data-switch-on="sim" data-switch-off="não"></label>
  </div>
</div>
<div class="col-md-12">
    <div id="botoes-grupo">
        <input type="hidden" id="GrupoAplicacao" name="GrupoAplicacao" />
        <button class="btn btn-black filtro" onclick="buscaProdutoPorGrupoSql(event, 0)">Todos</button>
        <button class="btn btn-reversed filtro pneus button-image " onclick="buscaProdutoPorGrupoSql(event, 1)">Pneus</button>
        <button class="btn btn-reversed filtro pastilhas button-image" onclick="buscaProdutoPorGrupoSql(event, 2)">Freios</button>
        <button class="btn btn-reversed filtro assessorios button-image" onclick="buscaProdutoPorGrupoSql(event, 3)">Lubrificantes</button>
        <button class="btn btn-reversed filtro servicos button-image" onclick="buscaProdutoPorGrupoSql(event, 4)">Serviços</button>
        <button class="btn btn-reversed filtro assessorios button-image " onclick="buscaProdutoPorGrupoSql(event, 5)">Acessórios</button>
        <button class="btn btn-reversed filtro amortecedores button-image " onclick="buscaProdutoPorGrupoSql(event, 6)">Suspensão</button>
    </div>
</div>
<div>
    <input type="hidden" id="FilialUsuario" name="FilialUsuario" value="@Model.LojaDestinoCampoCodigo" />
    <input type="hidden" id="MarcaVeiculo" name="MarcaVeiculo" value="@Model.MarcaVeiculoDescricao" />
    <input type="hidden" id="ModeloVeiculo" name="ModeloVeiculo" value="@Model.ModeloVeiculoDescricao" />
    <input type="hidden" id="VersaoVeiculo" name="VersaoVeiculo" value="@Model.VersaoVeiculoDescricao" />
    <input type="hidden" id="VersaoMotor" name="VersaoMotor" value="@Model.VersaoMotorDescricao" />
    <input type="hidden" id="Ano" name="Ano" value="@Model.AnoDescricao" />
    <input type="hidden" id="AnoVeiculo" name="AnoVeiculo" value="@Model.AnoVeiculo" />
    <input type="hidden" id="TipoOrcamento" name="TipoOrcamento" value="@Model.TipoOrcamento" />
    <input type="hidden" id="VeiculoIdFraga" name="VeiculoIdFraga" value="@Model.VeiculoIdFraga" />
</div>
