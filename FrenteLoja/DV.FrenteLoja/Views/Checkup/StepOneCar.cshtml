@section Scripts{
    <script>

        $(document).ready(function () {
            var inputs = document.querySelectorAll('.input-pneus');
            inputs.forEach((element) => {
                $(element).inputmask('mask', { 'mask': '[-]9°99' })
            });
        });

        $('#ConvergenciaTotalInicial').inputmask('mask', { 'mask': '9[9],99' });
        $('#ConvergenciaEsquerdaTraseiroInicial').inputmask('mask', { 'mask': '9[9],99' });
        $('#ConvergenciaDireitoTraseiroInicial').inputmask('mask', { 'mask': '9[9],99' });

        $('#ConvergenciaTotalFinal').inputmask('mask', { 'mask': '9[9],99' });
        $('#ConvergenciaEsquerdaTraseiroFinal').inputmask('mask', { 'mask': '9[9],99' });
        $('#ConvergenciaDireitoTraseiroFinal').inputmask('mask', { 'mask': '9[9],99' });

        document.querySelector('.input-pneus-no-mask').focus();
    </script>

}

@Scripts.Render("~/bundles/checkup")
