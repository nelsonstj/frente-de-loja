@model  DV.FrenteLoja.Core.Contratos.DataObjects.CheckupTruckDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/Content/img/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <title>Dellavia</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/inputmask")
</head>
<body>

    <header class="report">
        <div class="col-md-12 titulo-pdf">
            <h3> DIAGNÓSTICO RÁPIDO TRUCK - RELATÓRIO</h3>
        </div>
    </header>

    <main class="col-md-12 main-pdf">
        <div class="row" style="padding-left:25px">
            <div class="text-align-center" style="width:30%">
                <label> CLIENTE: </label>
                @Html.DisplayTextFor(model => model.Cliente)
            </div>
            <div class="text-align-center" style="width:30%">
                <label> VEÍCULO: </label>
                @Html.DisplayTextFor(model => model.Car)
            </div>
            <div class="text-align-center" style="width:30%">
                <label> ID: </label>
                @Html.DisplayTextFor(model => model.CheckupId)
            </div>
            <div class="col-md-1 offset-11">
                <label>  </label>
            </div>
        </div>
        <div class="legenda-pdf">
            @Html.Partial("_Legenda")
        </div>
        <div class="container-pdf">
            <div class="col-md-6 container-lado-lado-pdf">
                <label> SUSPENSÃO DIANTEIRA </label>
                @Html.CheckBoxSimplePdf(model => model.Embuchamento, model => model.EmbuchamentoExecutado)
                @Html.CheckBoxSimplePdf(model => model.TerminalBarraLonga, model => model.TerminalBarraLongaExecutado)
                @Html.CheckBoxSimplePdf(model => model.BarraCurtaDireção, model => model.BarraCurtaDireçãoExecutado)
                @Html.CheckBoxSimplePdf(model => model.LonaPastilhaFreioDianteiro, model => model.LonaPastilhaFreioDianteiroExecutado)
                @Html.CheckBoxSimplePdf(model => model.Amortecedor, model => model.AmortecedorExecutado)
                @Html.CheckBoxSimplePdf(model => model.BarraEstabilozadora, model => model.BarraEstabilozadoraExecutado)
                @Html.CheckBoxSimplePdf(model => model.TamborDiscoFreio, model => model.TamborDiscoFreioExecutado)
                @Html.CheckBoxSimplePdf(model => model.MolejoCompleto, model => model.MolejoCompletoExecutado, true)
            </div>
            <div class="col-md-6 container-lado-lado-pdf">
                <label> SUSPENSÃO TRASEIRA </label>
                @Html.CheckBoxSimplePdf(model => model.BracoTensor, model => model.BracoTensorExecutado)
                @Html.CheckBoxSimplePdf(model => model.BalancaPino, model => model.BalancaPinoExecutado)
                @Html.CheckBoxSimplePdf(model => model.LonaPastilhaFreioTraseiro, model => model.LonaPastilhaFreioTraseiroExecutado)
                @Html.CheckBoxSimplePdf(model => model.CatracaFlexivel, model => model.CatracaFlexivelExecutado)
                @Html.CheckBoxSimplePdf(model => model.MolejoSuporte, model => model.MolejoSuporteExecutado)
                @Html.CheckBoxSimplePdf(model => model.SuspensorTruck, model => model.SuspensorTruckExecutado)
                @Html.CheckBoxSimplePdf(model => model.TamborDiscoFreioTraseiro, model => model.TamborDiscoFreioTraseiroTruckExecutado)
                @Html.CheckBoxSimplePdf(model => model.AmortecedorTraseiro, model => model.AmortecedorTraseiroExecutado, true)
            </div>
        </div>

        <div class="obs-pdf-truck">
            <div class="col-md-12">@Html.LabelFor(model => model.Observacoes)</div>
            <p class="textObs">@Html.DisplayTextFor(model => model.Observacoes)</p>
        </div>
        <div class="container-tecnico-vendedor-pdf">
            <div class="container-lado-lado-pdf">
                <div class="col-md-9">
                    @Html.LabelFor(model => model.Tecnico)
                </div>
                <div class="col-md-3">
                    <p class="textObs"> @Html.DisplayTextFor(model => model.TecnicoNome) </p>
                </div>
            </div>

            <div class="container-lado-lado-pdf">
                <div class="col-md-9">
                    @Html.LabelFor(model => model.Vendedor)
                </div>
                <div class="col-md-3">
                    <p class="textObs"> @Html.DisplayTextFor(model => model.VendedorNome) </p>
                </div>
            </div>
        </div>
        <div class="container-data-pdf">
            <div class="container-lado-lado-pdf">
                <div class="col-md-9">
                    @Html.Label("Data")
                </div>
                <div class="col-md-3">
                    <p class="textObs"> __/__/__ </p>
                </div>
            </div>

            <div class="container-lado-lado-pdf">
                <div class="col-md-9">
                    <label class="assinatura assinatura-pdf"> ASSINATURA DO CLIENTE </label>
                </div>
                <div class="col-md-12 texto-assinatura-pdf">
                    <p class="textObs">
                        Declaro estar ciente das indicações relacionadas neste Check-up, a título de orientação,
                        bem como me responsabilizo pela recusa das trocas ou serviços recomendados para a manutenção
                        preventiva ou corretiva do veiculo avaliado
                    </p>
                </div>
            </div>
        </div>
    </main>


    @Scripts.Render("~/bundles/checkup")

</body>
</html>

